<h1>Listing content_forms</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @content_forms.each do |content_form| %>
  <tr>
    <td><%= content_form.title %></td>
    <td><%= content_form.content %></td>
    <td><%= content_form.date %></td>
    <td><%= link_to 'Show', content_form %></td>
    <td><%= link_to 'Edit', edit_content_form_path(content_form) %></td>
    <td><%= link_to 'Destroy', content_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

